#!/bin/bash

echo "Building Uni for macOS (Intel x86_64)..."
cargo build --release --target x86_64-apple-darwin --features target-linux,std,advanced_math,complex_numbers

if [ $? -eq 0 ]; then
    echo ""
    echo "Build complete!"
    echo "Binary location: target/x86_64-apple-darwin/release/uni"
    echo ""
    echo "Transfer this file to a macOS machine (Intel) to run it."
    echo ""
else
    echo "Build failed!"
    exit 1
fi
